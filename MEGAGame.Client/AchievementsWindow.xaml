<Window x:Class="MEGAGame.Client.AchievementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:MEGAGame.Client.Converters"
        Title="Достижения" WindowState="Maximized" WindowStyle="None" Background="#E3F2FD">
    <Window.Resources>
        <converters:AchievedToColorConverter x:Key="AchievedToColorConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Достижения" FontSize="40" FontWeight="Bold" Foreground="#0D47A1" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <ListView x:Name="AchievementsList" Grid.Row="1" Width="600" Height="400" FontSize="16">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Foreground="{Binding IsAchieved, Converter={StaticResource AchievedToColorConverter}}"/>
                        <Image Source="star.png" Width="20" Height="20" Margin="5,0,0,0" 
                               Visibility="{Binding IsAchieved, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="2" Content="Назад" Click="Back_Click" Width="150" Height="40" HorizontalAlignment="Center" 
                Background="#EF5350" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,20,0,0"/>
    </Grid>
</Window>