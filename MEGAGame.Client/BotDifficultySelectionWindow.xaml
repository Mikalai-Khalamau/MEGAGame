<Window x:Class="MEGAGame.Client.BotDifficultySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор сложности бота" Height="200" Width="300" WindowStartupLocation="CenterScreen" Background="#E3F2FD">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Выберите сложность бота" FontSize="20" Foreground="#0D47A1" Margin="0,0,0,20"/>
            <Button Content="Легкий" Click="EasyBot_Click" Width="100" Height="30" Margin="0,0,0,10" Background="#42A5F5" Foreground="White"/>
            <Button Content="Средний" Click="MediumBot_Click" Width="100" Height="30" Margin="0,0,0,10" Background="#42A5F5" Foreground="White"/>
            <Button Content="Сложный" Click="HardBot_Click" Width="100" Height="30" Background="#42A5F5" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>