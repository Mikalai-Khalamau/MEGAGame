<Window x:Class="MEGAGame.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Вход в игру" WindowState="Maximized" WindowStyle="None">
    <Grid Background="#E3F2FD">
        <!-- Кнопка выхода -->
        <Button Content="X" Click="Exit_Click" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Width="40" Height="40" Margin="10" Background="#EF5350" Foreground="White"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Введите ваши данные:" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#0D47A1"/>
            <TextBlock Text="Никнейм:" FontSize="14" Foreground="#0D47A1"/>
            <TextBox x:Name="NicknameBox" Margin="0,5,0,10" FontSize="14"/>
            <TextBlock Text="Имя:" FontSize="14" Foreground="#0D47A1"/>
            <TextBox x:Name="FirstNameBox" Margin="0,5,0,10" FontSize="14"/>
            <TextBlock Text="Фамилия:" FontSize="14" Foreground="#0D47A1"/>
            <TextBox x:Name="LastNameBox" Margin="0,5,0,10" FontSize="14"/>
            <TextBlock Text="Город:" FontSize="14" Foreground="#0D47A1"/>
            <TextBox x:Name="CityBox" Margin="0,5,0,20" FontSize="14"/>

            <Button Content="Продолжить" Click="Continue_Click" Padding="10,5" FontSize="14" Width="120"/>
        </StackPanel>
    </Grid>
</Window>