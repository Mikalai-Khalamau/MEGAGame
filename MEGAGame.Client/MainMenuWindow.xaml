<Window x:Class="MEGAGame.Client.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню" WindowState="Maximized" WindowStyle="None">
    <Grid Background="#E3F2FD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Выход" Click="Exit_Click" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Width="100" Height="40" Margin="0,10,20,10" Background="#EF5350" Foreground="White" 
                FontSize="16" FontWeight="Bold" ToolTip="Закрыть приложение"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="MEGAGame" FontSize="70" FontWeight="Bold" Margin="0,0,0,50" Foreground="#0D47A1"/>

                <Button Content="Игра по сети" Style="{StaticResource MenuButton}"/>
                <Button Content="Одиночная игра" Click="StartSinglePlayer_Click" Style="{StaticResource MenuButton}"/>
                <Button Content="Игра с другом" Style="{StaticResource MenuButton}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Background="#BBDEFB" Margin="10">
                <TextBlock Text="Дополнительно" FontWeight="Bold" Margin="0,0,0,10" Foreground="#0D47A1"/>
                <Button Content="Мировой рейтинг" Click="ShowRanking_Click" Style="{StaticResource SideButton}"/>
                <Button Content="Редактор вопросов" Style="{StaticResource SideButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>