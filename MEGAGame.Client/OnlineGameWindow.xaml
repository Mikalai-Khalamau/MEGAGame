<Window x:Class="MEGAGame.Client.OnlineGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Онлайн игра" Height="600" Width="800">
    <Grid>
        <!-- Панель лобби -->
        <StackPanel x:Name="LobbyPanel" Visibility="Visible">
            <TextBlock x:Name="RoomInfo" Text="Комната: ожидание..." Margin="10"/>
            <TextBlock Text="Введите ID комнаты:" Margin="10"/>
            <TextBox x:Name="JoinSessionId" Margin="10" Width="300"/>
            <TextBlock Text="Введите ключ (для приватных комнат):" Margin="10"/>
            <TextBox x:Name="JoinKey" Margin="10" Width="300" Visibility="Collapsed"/>
            <Button x:Name="CreatePublicRoomButton" Content="Создать публичную комнату" Click="CreatePublicRoom_Click" Margin="10"/>
            <Button x:Name="CreatePrivateRoomButton" Content="Создать приватную комнату" Click="CreatePrivateRoom_Click" Margin="10"/>
            <Button x:Name="JoinRoomButton" Content="Присоединиться" Click="JoinRoom_Click" Margin="10"/>
            <Button x:Name="StartGameButton" Content="Начать игру" Click="StartGame_Click" Margin="10" Visibility="Collapsed"/>
            <ListBox x:Name="PlayersList" Margin="10" Height="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding PlayerId, StringFormat='Игрок: {0}, Очки: {1}', ConverterParameter=Score}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button x:Name="ExitButton" Content="Выйти" Click="Exit_Click" Margin="10"/>
        </StackPanel>

        <!-- Панель игры -->
        <StackPanel x:Name="GamePanel" Visibility="Collapsed">
            <TextBlock x:Name="QuestionText" Text="Ожидание вопроса..." Margin="10"/>
            <TextBlock x:Name="TimerText" Text="Время: 0" Margin="10"/>
            <Button x:Name="BuzzButton" Content="Buzz!" Click="Buzz_Click" Margin="10" Visibility="Collapsed"/>
            <TextBox x:Name="AnswerInput" Margin="10" Width="300" Visibility="Collapsed"/>
            <Button x:Name="SubmitAnswerButton" Content="Отправить ответ" Click="SubmitAnswer_Click" Margin="10" Visibility="Collapsed"/>
            <TextBlock x:Name="ResultText" Text="Результаты:" Margin="10" Height="200"/>
            <Button x:Name="ExitButtonGame" Content="Выйти" Click="Exit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>