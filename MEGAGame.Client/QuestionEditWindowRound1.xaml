<metro:MetroWindow x:Class="MEGAGame.Client.QuestionEditWindowRound1"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                   Title="Редактировать вопрос (Раунд 1)" Width="600" Height="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактировать вопрос (Раунд 1)" FontSize="24" FontWeight="Bold" 
                   Foreground="#0D47A1" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Текст вопроса:" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,5"/>
        <TextBox x:Name="QuestionTextBox" Grid.Row="2" Width="400" Height="50" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Text="Варианты ответа:" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,5"/>
        <TextBox x:Name="Option1TextBox" Grid.Row="4" Width="400" Height="30" Margin="0,0,0,5"/>
        <TextBox x:Name="Option2TextBox" Grid.Row="5" Width="400" Height="30" Margin="0,0,0,5"/>
        <TextBox x:Name="Option3TextBox" Grid.Row="6" Width="400" Height="30" Margin="0,0,0,5"/>
        <TextBox x:Name="Option4TextBox" Grid.Row="7" Width="400" Height="30" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="8" Text="Правильный ответ (1-4):" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,5"/>
        <TextBox x:Name="CorrectOptionTextBox" Grid.Row="9" Width="400" Height="30" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="10" Text="Очки:" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,5"/>
        <TextBox x:Name="PointsTextBox" Grid.Row="11" Width="400" Height="30" Margin="0,0,0,30"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="Save_Click" Width="150" Height="40" Margin="0,0,10,0" 
                    Background="#42A5F5" Foreground="White" FontSize="16"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="150" Height="40" 
                    Background="#EF5350" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</metro:MetroWindow>