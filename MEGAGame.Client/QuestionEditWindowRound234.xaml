<metro:MetroWindow x:Class="MEGAGame.Client.QuestionEditWindowRound234"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                   Title="Редактировать вопрос (Раунды 2-4)" Width="600" Height="550">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактировать вопрос (Раунды 2-4)" FontSize="24" FontWeight="Bold" 
                   Foreground="#0D47A1" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Текст вопроса:" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,5"/>
        <TextBox x:Name="QuestionTextBox" Grid.Row="2" Width="400" Height="50" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Text="Правильный ответ 1:" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,5"/>
        <TextBox x:Name="AnswerTextBox" Grid.Row="4" Width="400" Height="30" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="5" Text="Правильный ответ 2 (необязательно):" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,5"/>
        <TextBox x:Name="Answer2TextBox" Grid.Row="6" Width="400" Height="30" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="7" Text="Правильный ответ 3 (необязательно):" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,5"/>
        <TextBox x:Name="Answer3TextBox" Grid.Row="8" Width="400" Height="30" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="9" Text="Очки:" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,5"/>
        <TextBox x:Name="PointsTextBox" Grid.Row="10" Width="400" Height="30" Margin="0,-50,0,30"/>

        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
            <Button Content="Сохранить" Click="Save_Click" Width="150" Height="40" Margin="0,0,10,0" 
                    Background="#42A5F5" Foreground="White" FontSize="16"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="150" Height="40" 
                    Background="#EF5350" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</metro:MetroWindow>