<mah:MetroWindow x:Class="MEGAGame.Client.QuestionEditorWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 Title="Редактор вопросов" WindowState="Maximized" ResizeMode="NoResize" Background="#E3F2FD">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактор вопросов" FontSize="30" FontWeight="Bold" Foreground="#0D47A1" 
                   HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Пакеты вопросов" FontSize="16" Foreground="#0D47A1" Margin="0,0,0,10"/>
                <ListBox x:Name="PackList" Height="300" SelectionChanged="PackList_SelectionChanged"/>
                <Button Content="Создать новый пакет" Click="CreatePack_Click" Margin="0,10,0,0" Padding="5"/>
                <Button Content="Опубликовать пакет" Click="PublishPack_Click" Margin="0,10,0,0" Padding="5"/>
                <Button Content="Создать тему" Click="CreateTheme_Click" Margin="0,10,0,0" Padding="5"/>
                <Button Content="Добавить вопросы в тему" Click="AddQuestionsToTheme_Click" Margin="0,10,0,0" Padding="5"/>
                <Button Content="Назад" Click="Back_Click" Margin="0,20,0,0" Padding="5"/>
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Вопросы в пакете:" FontSize="16" Foreground="#0D47A1"/>
                    <TextBlock x:Name="PackNameLabel" FontSize="16" Foreground="#0D47A1" Margin="10,0,0,0"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ListBox Grid.Column="0" x:Name="QuestionList" Height="300" SelectionChanged="QuestionList_SelectionChanged"/>
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <Button Content="Редактировать" Click="EditQuestion_Click" Margin="0,0,0,10" Padding="5"/>
                        <Button Content="Удалить вопрос" Click="DeleteQuestion_Click" Padding="5"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</mah:MetroWindow>