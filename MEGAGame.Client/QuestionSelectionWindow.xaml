<mah:MetroWindow x:Class="MEGAGame.Client.QuestionSelectionWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 Title="Выбор темы для вопроса" WindowState="Maximized" ResizeMode="NoResize" Background="#E3F2FD">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выбор темы для вопроса" FontSize="30" FontWeight="Bold" Foreground="#0D47A1" Margin="0,0,0,20"/>
        <TextBlock Grid.Row="1" Text="Выберите тему:" FontSize="16" Foreground="#0D47A1"/>
        <ComboBox x:Name="ThemeComboBox" Grid.Row="2" Margin="0,5,0,20" Width="300"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Добавить вопрос" Click="AddQuestion_Click" Padding="10" Width="120"/>
            <Button Content="Отмена" Click="Cancel_Click" Padding="10" Width="120" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>